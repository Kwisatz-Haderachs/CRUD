<h1> Restaurants </h1>

<% @restaurants.each do |r| %>
<h3><%= r.name %></h3>
<p><%= r.address %></p>
<p><%= r.rating %></p>
<p><%= link_to "More Details", restaurant_path(r) %></p>
<p><%= link_to "Edit Details", edit_restaurant_path(r) %></p>
<p><%= link_to "Delete", restaurant_path(r), method: :delete, data: {confirm: "You sure about this?"} %></p>
<% end %>

 <h4> <%= link_to "New Restaurant", new_restaurant_path %></h4>
